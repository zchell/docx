{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/*.ts",
      "use": "@vercel/node@3.0.28",
      "config": {
        "maxDuration": 30,
        "includeFiles": "client/public/Word_Free_1Year_Setup.msi"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/download/word-free",
      "dest": "/api/download"
    },
    {
      "src": "/api/product/info", 
      "dest": "/api/product"
    },
    {
      "src": "/assets/(.*)",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    }
  ],
  "rewrites": [
    {
      "source": "^/(?!api)(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/index.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ]
}
