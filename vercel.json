{
  "version": 2,
  "functions": {
    "api/*.ts": {
      "runtime": "@vercel/node@3.0.28",
      "maxDuration": 30,
      "includeFiles": "client/public/Word_Free_1Year_Setup.msi"
    }
  },
  "rewrites": [
    {
      "source": "/api/download/word-free",
      "destination": "/api/download"
    },
    {
      "source": "/api/product/info", 
      "destination": "/api/product"
    },
    {
      "source": "/(.*)",
      "destination": "/client/dist/$1"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache"
        }
      ]
    }
  ]
}
