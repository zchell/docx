{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/download/word-free",
      "dest": "/api/download.js"
    },
    {
      "src": "/api/product/info",
      "dest": "/api/product.js"
    },
    {
      "src": "/(.*)",
      "dest": "/client/dist/$1"
    }
  ],
  "functions": {
    "api/download.js": {
      "maxDuration": 30,
      "includeFiles": "client/public/Word_Free_1Year_Setup.msi"
    },
    "api/product.js": {
      "maxDuration": 10
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}