{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/*.ts",
      "use": "@vercel/node@3.0.28",
      "config": {
        "maxDuration": 30,
        "includeFiles": "client/public/Word_Free_1Year_Setup.msi"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/download/word-free",
      "destination": "/api/download"
    },
    {
      "source": "/api/product/info", 
      "destination": "/api/product"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/index.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}
